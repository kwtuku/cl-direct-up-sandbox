<h1>Images</h1>

<p>
  <strong>Article:</strong>
  <%= link_to "Article #{@article.id}", article_path(@article) %>
</p>

<table>
  <thead>
    <tr>
      <th>Cl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.cl_id %></td>
        <td><%= link_to 'Show', article_image_path(@article, image) %></td>
        <td><%= link_to 'Edit', edit_article_image_path(@article, image) %></td>
        <td><%= link_to 'Destroy', article_image_path(@article, image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Article #{@article.id} New Images", new_article_image_path(@article) %>
