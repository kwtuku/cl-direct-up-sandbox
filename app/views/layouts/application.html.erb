<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <header>
      <nav class="navbar has-shadow" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <%= link_to 'トップ', root_path, class: 'navbar-item' %>
          <%= link_to 'アカウント編集', edit_user_registration_path, class: 'navbar-item' if user_signed_in? %>
          <div class="navbar-item">
            <div class="buttons">
              <% if user_signed_in? %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'button is-light' %>
              <% else %>
                <%= link_to 'ログイン', new_user_session_path, class: 'button is-primary' %>
                <%= link_to 'アカウント登録', new_user_registration_path, class: 'button is-light' %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
